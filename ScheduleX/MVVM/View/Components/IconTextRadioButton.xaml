<UserControl x:Class="ScheduleX.MVVM.View.Components.IconTextRadioButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScheduleX.MVVM.View.Components"
             mc:Ignorable="d" 
             x:Name="iconTextRadioButton">
	<RadioButton 
		GroupName="{Binding ElementName=iconTextRadioButton, Path=GroupName}"
		IsChecked="{Binding ElementName=iconTextRadioButton, Path=IsChecked}">
		<RadioButton.Content>
			<StackPanel Orientation="Horizontal">
				<Path 
					Data="{Binding ElementName=iconTextRadioButton, Path=IconGeometry}" 
					Fill="Black"
					Stretch="Fill"/>
				<TextBlock Text="{Binding ElementName=iconTextRadioButton, Path=Text}"/>
			</StackPanel>
		</RadioButton.Content>
	</RadioButton>
</UserControl>
